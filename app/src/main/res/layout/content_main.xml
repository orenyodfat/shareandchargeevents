<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.oren.share_and_charge_events.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/node_version_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"

        android:text="node version:" />

    <TextView
        android:id="@+id/node_version"
        android:layout_below="@+id/node_version_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/blockcount"
        android:layout_below="@+id/node_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current block->" />
    <TextView
        android:id="@+id/event_name_str"
        android:layout_below="@+id/blockcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="event:" />

    <TextView
        android:id="@+id/event_name"
        android:layout_below="@+id/event_name_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="" />

    <TextView
        android:id="@+id/poll_id_str"
        android:layout_below="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/poll_id"
        android:layout_below="@+id/poll_id_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/block_str"
        android:layout_below="@+id/poll_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="" />


    <TextView
        android:id="@+id/param1_str"
        android:layout_below="@+id/block_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/param1"
        android:layout_below="@+id/param1_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/param2_str"
        android:layout_below="@+id/param1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/param2"
        android:layout_below="@+id/param2_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/param3_str"
        android:layout_below="@+id/param2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/param3"
        android:layout_below="@+id/param3_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/param4_str"
        android:layout_below="@+id/param3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/param4"
        android:layout_below="@+id/param4_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

</RelativeLayout>
